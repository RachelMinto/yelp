.padded-column.registration-form
  .row
    %form.with-border.col-md-6
      %h4.emphasis Sign Up for Yelp
      %hr      
      .form-group.row
        .form-group.col-md-6
          %label(for="first_name") First Name
          %input.form-control(type="text" name="first_name" id="first_name")
        .form-group.col-md-6          
          %label(for="last_name") Last Name
          %input.form-control(type="text" name="last_name" id="last_name")        
      .form-group
        %label(for="location") Home Town and State
        %input.form-control(type="text" name="location" id="location" placeholder=" Eg. Boston, MA")
      .form-group
        %label(for="email") Email
        %input.form-control(type="email" name="email" id="email")
      .form-group
        %label(for="password") Password
        %input.form-control(type="password" name="password" id="password")
      .form-group.row.text-center
        %button.ybtn.col-md-3(type="submit") Sign Up                                  
    %img.col-md-6.offset-md-col-2(src="/images/signup_illustration.png")
