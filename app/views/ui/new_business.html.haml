      %h4.col-md-2 Sunday    
      %label(for="sun_start") Opens at:
      %input.form-control(type="time" id="sun_start" name="sun_start")
      %label(for="sun_end") Closes at:
      %input.form-control(type="time" id="sun_end" name="sun_end")                        
    %hr           
    %h4.emphasis Additional Information         
    .additional-info
      %label.custom-control.custom-checkbox
        %input.custom-control-input(type="checkbox")
        %span.custom-control-indicator
        %span.custom-control-description Bike Parking
      %label.custom-control.custom-checkbox
        %input.custom-control-input(type="checkbox")
        %span.custom-control-indicator
        %span.custom-control-description Wheel Chair Accessible
      %label.custom-control.custom-checkbox
        %input.custom-control-input(type="checkbox")
        %span.custom-control-indicator
        %span.custom-control-description Accepts Credit Cards
      %label.custom-control.custom-checkbox
        %input.custom-control-input(type="checkbox")
        %span.custom-control-indicator
        %span.custom-control-description Take Out
    .form-group
      %button.ybtn.col-md-2(type="submit") Create
      = link_to "Cancel", "#"